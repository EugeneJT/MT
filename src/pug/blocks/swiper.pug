include ../variables/swiper

section.division.meta-trader__swiper
    .swiper.mySwiper
        .swiper-pagination
        .swiper-wrapper.swiper
            each item in swiper
                .swiper-slide.swiper__item.swiper-slide-visible
                    .swiper__content
                        h3.title-size-l.push-size-xxxs.u-weight-500(data-swiper-parallax="50")!= item.title
                        p.title-size-s(data-swiper-parallax="50")!= item.subtitle
                    .swiper__img-container(data-swiper-parallax="50")
                        picture
                            source(srcset='../assets/img/swiper/' + item.imgName + '@1x.webp 1x' + ', ../assets/img/swiper/' + item.imgName + '@2x.webp 2x' type='image/webp')
                            img.swiper__img(src='../assets/img/swiper/' + item.imgName + '@1x.png' srcset='../assets/img/swiper/' + item.imgName + '@2x.png 2x' alt="" loading='lazy' width='240' height='319')
